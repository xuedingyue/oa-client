<!--index.wxml-->
<import src="../common/head.wxml" />
<import src="../common/foot.wxml" />
<view class="container">
  <template is="head" data="{{title: '我的'}}"/>
  <view>
    <view class="button-group">
      <button class='mune-button' bindtap="showDialogWithPicker">考勤记录查询</button>
      <button class='mune-button' bindtap="bindViewTap">请假</button>
      <button class='mune-button' bindtap="bindPicTap">考勤图</button>
    </view>
    <!--弹窗-->
    <view class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove"
    wx:if="{{showModal}}"></view>
    <view class="modal-dialog" wx:if="{{showModal}}">
      <view class="modal-title">请输入需要查询的月份</view>
      <view class="weui-cells__title">请选择开始月份</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">开始</view>
          </view>
          <view class="weui-cell__bd">
            <picker mode="date" fields="month" value="{{inputvalue}}" bindchange="bindValueChange">
              <view class="weui-input">{{inputvalue}}</view>
            </picker>
          </view>
        </view>
      </view>
      <view class="weui-cells__title">请选择结束月份</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">结束</view>
          </view>
          <view class="weui-cell__bd">
            <picker mode="date" fields="month" value="{{inputvalue}}" bindchange="bindValueChange">
              <view class="weui-input">{{inputvalue}}</view>
            </picker>
          </view>
        </view>
      </view>
      
      <view class="modal-footer">
        <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view>
        <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">确定</view>
      </view>
    </view>
  </view>
</view>
