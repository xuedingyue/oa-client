.table {
  border:1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 100%;
  height: 80%;
  background-color: #93db50be;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th,.td {
  padding: 10px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width:100%
}
