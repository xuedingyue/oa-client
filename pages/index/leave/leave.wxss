
label {
  display: inline-block;
  min-width: 270rpx;
  margin-right: 20rpx;
}
form{
  width: 100%;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}
.btn-area{
  display: flex;
}

.btn-area button{
  width: 40%;
}
.scroll-view_H{
  height: 450rpx;
